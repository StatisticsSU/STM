\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
L2-regularization (Ridge regression)
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Least squares 
\series bold
\color blue
minimize residual sum of squares
\series default
\color inherit

\begin_inset Formula 
\[
\mathrm{RSS}(\beta_{0},\beta_{1})=\sum_{i=1}^{n}(y_{i}-\beta_{0}-\beta_{1}x_{i})^{2}
\]

\end_inset


\end_layout

\begin_layout Itemize
Same as 
\series bold
\color blue
maximize log likelihood
\series default
\color inherit

\begin_inset Formula 
\[
\mathrm{\ell}(\beta_{0},\beta_{1})=\mathrm{constant}-\frac{1}{2\sigma_{\varepsilon}^{2}}\sum_{i=1}^{n}(y_{i}-\beta_{0}-\beta_{1}x_{i})^{2}
\]

\end_inset


\end_layout

\begin_layout Itemize
Flexible models with many parameters can 
\series bold
\color blue
overfit
\series default
\color inherit
.
\end_layout

\begin_layout Itemize
Regularization penalizes large values of the parameters.
\end_layout

\begin_layout Itemize
L2-regularization
\begin_inset Formula 
\[
\mathrm{RSS}_{\mathrm{P}}(\beta_{0},\beta_{1})=\sum_{i=1}^{n}(y_{i}-\beta_{0}-\beta_{1}x_{i})^{2}\quad+\quad\textcolor{orange}{\underset{\mathrm{L2-penalty}}{\underbrace{\lambda\cdot(\beta_{0}^{2}+\beta_{1}^{2})}}}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
L2-regularization (Ridge regression)
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Least squares 
\series bold
\color blue
minimize residual sum of squares
\series default
\color inherit

\begin_inset Formula 
\[
\mathrm{RSS}(\boldsymbol{\beta})=\sum_{i=1}^{n}(y_{i}-\boldsymbol{x}_{i}^{\top}\boldsymbol{\beta})^{2}=(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})^{\top}(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})
\]

\end_inset


\end_layout

\begin_layout Itemize
L2-regularization
\begin_inset Formula 
\[
\mathrm{RSS}_{\mathrm{P}}(\boldsymbol{\beta})=(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})^{\top}(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})\quad+\quad\textcolor{orange}{\underset{\mathrm{L2-penalty}}{\underbrace{\lambda\cdot\boldsymbol{\beta}^{\top}\boldsymbol{\beta}}}}
\]

\end_inset


\end_layout

\begin_layout Itemize
Solving for 
\begin_inset Formula $\boldsymbol{\beta}$
\end_inset


\begin_inset Formula 
\[
\frac{\mathrm{\partial}}{\partial\boldsymbol{\beta}}\mathrm{RSS}_{\mathrm{P}}(\boldsymbol{\beta})=-2\boldsymbol{X}^{\top}(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})+2\lambda\boldsymbol{\beta}=\boldsymbol{0}
\]

\end_inset

gives the solution
\begin_inset Formula 
\[
\hat{\boldsymbol{\beta}}_{L_{2}}=(\boldsymbol{X}^{\top}\boldsymbol{X}+\lambda\boldsymbol{I}_{p})^{-1}\boldsymbol{X}^{\top}\boldsymbol{y}
\]

\end_inset


\end_layout

\begin_layout Itemize

\series bold
\color blue
Shrinkage
\series default
\color inherit
 of least squares 
\begin_inset Formula $\hat{\boldsymbol{\beta}}$
\end_inset

 toward zero.
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
L1-regularization (Lasso regression)
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Least squares 
\series bold
\color blue
minimize residual sum of squares
\series default
\color inherit

\begin_inset Formula 
\[
\mathrm{RSS}(\boldsymbol{\beta})=\sum_{i=1}^{n}(y_{i}-\boldsymbol{x}_{i}^{\top}\boldsymbol{\beta})^{2}=(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})^{\top}(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})
\]

\end_inset


\end_layout

\begin_layout Itemize
L2-regularization
\begin_inset Formula 
\[
\mathrm{RSS}_{\mathrm{P}}(\boldsymbol{\beta})=(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})^{\top}(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})\quad+\quad\textcolor{orange}{\underset{\mathrm{L1-penalty}}{\underbrace{\lambda\cdot\sum_{j=1}^{p}\mid\beta_{j}\mid}}}
\]

\end_inset


\end_layout

\begin_layout Itemize
No explicit formula, but very efficient algorithm (LARS).
\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_layout Itemize
Lasso does both:
\end_layout

\begin_deeper
\begin_layout Itemize

\series bold
\color blue
shrinkage
\series default
\color inherit
 and 
\end_layout

\begin_layout Itemize

\series bold
\color blue
selection
\series default
\color inherit
 - sets some 
\begin_inset Formula $\hat{\beta_{j}}$
\end_inset

 exactly to zero.
\end_layout

\end_deeper
\end_deeper
