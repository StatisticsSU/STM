\begin_layout Standard
\begin_inset Formula 
\[
\underset{\tilde{y}}{\underbrace{\log_{10}y}}=\underset{\gamma_{0}}{\underbrace{\log_{10}\beta_{0}}}+\underset{\gamma_{1}}{\underbrace{\log_{10}\beta_{1}}}\cdot x+\underset{\tilde{\varepsilon}}{\underbrace{\log_{10}\varepsilon}}
\]

\end_inset


\begin_inset Formula 
\[
\tilde{y}=\gamma_{0}+\gamma_{1}\cdot x+\tilde{\varepsilon},\qquad\tilde{\varepsilon}\sim N\left(0,\sigma_{\tilde{\varepsilon}}^{2}\right).
\]

\end_inset


\end_layout

