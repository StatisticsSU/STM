\end_layout

\begin_layout Itemize

\series bold
\color blue
Logaritmregler 
\series default
\color inherit
(10-logaritmer 
\begin_inset Formula $\log=\log_{10}$
\end_inset

)
\size footnotesize

\begin_inset Formula 
\begin{align*}
\log(a\cdot b) & =\log a+\log b\text{ ("log av produkten är summan av log")}\\
\log b^{x} & =x\log b\text{ ("exponenten hoppar ner framför")}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Logaritmera båda sidor
\size small

\begin_inset Formula 
\[
\underset{\tilde{y}}{\underbrace{\log y}}=\underset{\tilde{a}}{\underbrace{\log a}}+\underset{\tilde{b}}{\underbrace{\log b}}\cdot x
\]

\end_inset


\begin_inset Formula 
\[
\tilde{y}=\tilde{a}+\tilde{b}x
\]

\end_inset


\begin_inset Formula 
\[
\tilde{a}=\log a
\]

\end_inset


\begin_inset Formula 
\[
\tilde{b}=\log b
\]

\end_inset


\end_layout

\begin_layout Itemize
Skatta 
\begin_inset Formula $\tilde{a}$
\end_inset

 och 
\begin_inset Formula $\tilde{b}$
\end_inset

 med 
\series bold
\color blue
minsta-kvadrat
\series default
\color inherit
 med 
\begin_inset Formula $\tilde{y}=\log y$
\end_inset

!
\end_layout

\begin_layout Itemize
Skattningar för 
\begin_inset Formula $a$
\end_inset

 och 
\begin_inset Formula $b$
\end_inset

 fås genom 
\series bold
\color blue
anti-logaritmering
\series default
\color inherit

\begin_inset Formula 
\[
a=10^{\tilde{a}}\qquad\text{ och }\qquad b=10^{\tilde{b}}
\]

\end_inset


\end_layout

\end_deeper
