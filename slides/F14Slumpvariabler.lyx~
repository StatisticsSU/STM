\begin_deeper
\begin_layout Itemize
Låt 
\begin_inset Formula $X$
\end_inset

 ha väntevärde 
\begin_inset Formula $\mu$
\end_inset

 och 
\begin_inset Formula $Y$
\end_inset

 väntevärde 
\begin_inset Formula $\nu$
\end_inset

.
 
\end_layout

\begin_layout Itemize

\series bold
\color orange
Kovarians
\series default
\color inherit
: 
\series bold
\color blue
linjärt beroende
\series default
\color inherit
 mellan slumpvariabler.
\size small

\begin_inset Formula 
\[
Cov(X,Y)=E\left((X-\mu)(Y-\nu)\right)
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
\align center
\begin_inset Graphics
	filename figs/PositivKovarians.pdf
	scale 35

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize

\series bold
\color blue
Korrelation 
\begin_inset Formula $(-1\leq Corr(X,Y)\leq1)$
\end_inset

 
\color orange

\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
emoji{smiling-face-with-heart-eyes}
\end_layout

\end_inset


\series default
\size small
\color inherit

\begin_inset Formula 
\[
Corr(X,Y)=\rho_{XY}=\frac{Cov(X,Y)}{\sigma_{X}\cdot\sigma_{Y}}
\]

\end_inset


\end_layout

\begin_layout Itemize
Så kovariansen kan också uttryckas
\size small

\begin_inset Formula 
\[
Cov(X,Y)=\rho_{XY}\cdot\sigma_{X}\cdot\sigma_{Y}
\]

\end_inset


\end_layout

\end_deeper
