\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_layout Itemize
Medelvärdet 
\begin_inset Formula $\bar{x}$
\end_inset

 påverkas mycket av extrema värden.
 
\size footnotesize
Jfr median
\size default
.
\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_layout Itemize
Väntevärdet påverkas mycket av fördelningens 'svansar'.
\begin_inset VSpace bigskip
\end_inset


\end_layout

