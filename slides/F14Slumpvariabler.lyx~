\begin_layout Plain Layout

\series bold
\color orange
Varians - fördelningens spridning (i kvadrat)
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Väntevärdet 
\begin_inset Formula $\mu$
\end_inset

 är bara en slags bästa gissning.
\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_layout Itemize
Ofta viktigt att veta fördelningens 
\series bold
\color blue
spridning
\series default
\color inherit
.
 Osäkerhet.
\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_layout Itemize
Medelavvikelse från 
\begin_inset Formula $\mu$
\end_inset

 som spridning?
\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Avvikelser från centrum 
\begin_inset Formula $x-\mu$
\end_inset

.
 
\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_layout Itemize
Problem: Negativa och positiva avvikelser tar ut varandra.
 
\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_layout Itemize
Lösning: kvadrera avvikelserna 
\begin_inset Formula $(x-\mu)^{2}$
\end_inset

 först.
\begin_inset VSpace medskip
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize

\series bold
\color blue
Variansen
\series default
\color inherit
 för en slumpvariabel
\begin_inset Formula 
\[
Var(X)=\sum_{\text{alla x}}(x-\mu)^{2}P(x)
\]

\end_inset


\end_layout

\begin_layout Itemize
Variansen skrivs ofta med symbolen 
\begin_inset Formula $\sigma^{2}$
\end_inset

.
\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_layout Itemize
Exempel: 
\begin_inset Formula $X=$
\end_inset

 räntekostnad.
 
\begin_inset Formula $\mu=E(X)=3252$
\end_inset

.
\size footnotesize

\begin_inset Formula 
\begin{align*}
Var(X) & =(833-3252)^{2}\cdot\textcolor{orange}{0.017}+(1667-3252)^{2}\cdot\textcolor{orange}{0.094}+\\
 & \ldots+(6667-3252)^{2}\cdot\textcolor{orange}{0.001}\approx965553.1{\color{blue}\mathbf{}\text{ kr}^{2}}
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
Standardavvikelse - ett mått på medelspridning
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize

\series bold
\color blue
Variansen
\series default
\color inherit
 för en slumpvariabel
\begin_inset Formula 
\[
Var(X)=\sum_{\text{alla x}}(x-\mu)^{2}P(x)
\]

\end_inset

Variansen har 
\series bold
\color orange
enheter i kvadrat
\series default
\color inherit
.
 Ingen trevlig tolkning.
 
\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_layout Itemize

\series bold
\color blue
Standardavvikelsen
\series default
\color inherit
 har samma enheter som slumpvariabeln
\begin_inset Formula 
\[
\sigma=SD(X)=\sqrt{Var(X)}
\]

\end_inset


\end_layout

\begin_layout Itemize
Exempel: 
\begin_inset Formula $X=$
\end_inset

 räntekostnad.
 
\begin_inset Formula 
\[
\sigma=\sqrt{965553.1}\approx982.63\texttt{ {\color{blue}{\color{blue}{\color{blue}kr}}}}
\]

\end_inset


\end_layout

\begin_layout Itemize
Vår 
\begin_inset Quotes eld
\end_inset

bästa gissning
\begin_inset Quotes erd
\end_inset

 av räntekostnad: 
\begin_inset Formula $\mu=3252$
\end_inset

 kr
\end_layout

\begin_layout Itemize
En genomsnittlig avvikelse från denna gissning är cirka 
\begin_inset Formula $983$
\end_inset

 kr.
\end_layout

