\begin_layout Plain Layout

\series bold
\color orange
Sannolikhetsfördelning
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Varje värde 
\begin_inset Formula $x$
\end_inset

 som slumpvariabeln 
\begin_inset Formula $X$
\end_inset

 kan anta har en 
\series bold
\color blue
sannolikhet 
\begin_inset Formula $P(X=x)$
\end_inset


\series default
\color inherit
 (eller bara
\series bold
\color blue
 
\begin_inset Formula $P(x)$
\end_inset


\series default
\color inherit
).
\begin_inset VSpace smallskip
\end_inset


\end_layout

\begin_layout Itemize

\series bold
\color blue
Sannolikhetsfördelningen
\series default
\color inherit
 för 
\begin_inset Formula $X$
\end_inset

 är sannolikheterna för alla möjliga utfall.
 
\begin_inset Formula $\sum P(x)=1$
\end_inset

.
\begin_inset VSpace -0.3cm
\end_inset


\end_layout

