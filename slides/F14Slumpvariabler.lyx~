\end_layout

\begin_deeper
\begin_layout Itemize

\series bold
\color blue
Medelvärdet
\series default
\color inherit
 för ett 
\series bold
\color blue
stickprov
\series default
\color inherit

\begin_inset Formula 
\[
\bar{x}=\frac{\sum_{i=1}^{n}x_{i}}{n}=\frac{1}{n}x_{1}+\frac{1}{n}x_{2}+\ldots+\frac{1}{n}x_{n}
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $X$
\end_inset

 är en slumpvariabel med sannolikhetsfördelning 
\begin_inset Formula $P(X=x)$
\end_inset

.
\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_layout Itemize

\series bold
\color blue
Väntevärdet
\series default
\color inherit
 för 
\series bold
\color blue
slumpvariabeln
\series default
\color inherit
 
\begin_inset Formula $X$
\end_inset

 är (
\series bold
\color orange
expected value
\series default
\color inherit
) 
\begin_inset Formula 
\[
E(X)=\sum_{\text{alla }x}x\cdot P(x)
\]

\end_inset


\end_layout

\begin_layout Itemize
Summan är över alla möjliga värden för 
\begin_inset Formula $X$
\end_inset

.
\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_layout Itemize
Vi använder ofta grekiska bokstaven 
\begin_inset Formula $\textcolor{orange}{\mu}$
\end_inset

 för 
\begin_inset Formula $E(X)$
\end_inset

.
 
\begin_inset Newline newline
\end_inset

Grekiska bokstaven för 
\emph on
m
\emph default
, m som i 
\series bold
\color blue
mean
\series default
\color inherit
.
 
\begin_inset Quotes eld
\end_inset


\color orange
lilla my
\color inherit

\begin_inset Quotes erd
\end_inset

.
\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_layout Itemize
Mer utförligt: om 
\begin_inset Formula $X$
\end_inset

 kan anta värdena 
\begin_inset Formula $\{x_{1},x_{2},\ldots,x_{m}\}$
\end_inset

 så är
\begin_inset Formula 
\[
E(X)=\sum_{i=1}^{m}x_{i}\cdot P(x_{i})
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

