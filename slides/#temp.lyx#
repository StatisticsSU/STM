\begin_deeper
\begin_layout Itemize
Let 
\begin_inset Formula $X\sim N(\mu,\sigma^{2})$
\end_inset

 with pdf
\begin_inset Formula 
\[
f_{X}(x)=\frac{1}{\sqrt{2\pi\sigma^{2}}}\exp\left(-\frac{1}{2\sigma^{2}}(x-\mu)^{2}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $Y=\exp(X)$
\end_inset

 with inverse transformation 
\begin_inset Formula $X=\log(Y)$
\end_inset

 with derivative
\begin_inset Formula 
\[
\frac{\mathrm{d}}{\mathrm{d}y}g^{-1}(y)=\frac{\mathrm{d}}{\mathrm{d}y}\log(y)=\frac{1}{y}
\]

\end_inset


\end_layout

\begin_layout Itemize
Then
\begin_inset Formula 
\[
f_{Y}(y)=f_{X}\left(\log(y)\right)\cdot\frac{1}{y}=\frac{1}{y\sqrt{2\pi\sigma^{2}}}\exp\left(-\frac{1}{2\sigma^{2}}(\log(y)-\mu)^{2}\right)
\]

\end_inset

for 
\begin_inset Formula $y>0$
\end_inset

.
\end_layout

\begin_layout Itemize
We have shown: if 
\begin_inset Formula $X\sim N(\mu,\sigma^{2})$
\end_inset

 then 
\begin_inset Formula 
\[
\exp(X)\sim\mathrm{LogNormal}(\mu,\sigma^{2})
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
Monte Carlo simulation
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Let 
\begin_inset Formula $X\sim f(x).$
\end_inset

 
\end_layout

\begin_layout Itemize
Compute 
\begin_inset Formula $\mathbb{E}\left(g(X)\right)$
\end_inset

 for some function 
\begin_inset Formula $Y=g(X)$
\end_inset

 by simulation.
\end_layout

\begin_layout Itemize
Key idea: 
\series bold
\color blue
law of large numbers
\series default
\color inherit
.
\end_layout

\begin_layout Itemize
Simulate 
\begin_inset Formula $x_{1},\ldots x_{N}\overset{\mathrm{iid}}{\sim}f(x)$
\end_inset


\begin_inset Formula 
\[
\frac{1}{m}\sum_{i=1}^{m}g(x_{i})\overset{p}{\rightarrow}\mathbb{E}\left(g(X)\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Monte Carlo to 
\series bold
\color blue
compute tail probability
\series default
\color inherit
 
\begin_inset Formula $\mathrm{Pr}(X>c)$
\end_inset


\begin_inset Formula 
\[
g(x)=\begin{cases}
1 & \text{ if }x>c\\
0 & \text{ if }x\leq c
\end{cases}
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\mathbb{E}\left(g(X)\right) & =\int_{-\infty}^{\infty}g(x)f(x)\mathrm{d}x=\int_{-\infty}^{c}0\cdot f(x)\mathrm{d}x+\int_{c}^{\infty}1\cdot f(x)\mathrm{d}x\\
 & =\int_{c}^{\infty}f(x)\mathrm{d}x=\mathrm{Pr}(X>c)
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
Monte Carlo accuracy via the CLT
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Central limit theorem (informal)
\begin_inset Formula 
\[
\frac{1}{m}\sum_{i=1}^{m}g(x_{i})\overset{\mathrm{approx}}{\sim}N\left(\mu,\frac{\sigma^{2}}{N}\right)
\]

\end_inset

where 
\begin_inset Formula 
\[
\mu=\mathbb{E}\left(g(X)\right)
\]

\end_inset

and
\begin_inset Formula 
\[
\sigma^{2}=\mathbb{V}(g(X))
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

