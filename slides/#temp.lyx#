\begin_deeper
\begin_layout Itemize
\begin_inset Formula $X\sim N(0,1)$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $Y=X^{2}$
\end_inset

 which is monotone on 
\begin_inset Formula $(-\infty,0)$
\end_inset

 and 
\begin_inset Formula $[0,\infty)$
\end_inset


\end_layout

\begin_layout Itemize
Result: 
\begin_inset Formula $Y\sim\chi^{2}(\nu=1)$
\end_inset


\end_layout

