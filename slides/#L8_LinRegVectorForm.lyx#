\begin_deeper
\begin_layout Itemize
\begin_inset Formula $X$
\end_inset

 and 
\begin_inset Formula $Y$
\end_inset

 follow a 
\series bold
\color blue
bivariate normal distribution
\series default
\color inherit
 
\begin_inset Formula 
\[
(X,Y)\sim N(\mu_{x},\mu_{y},\sigma_{x},\sigma_{y},\rho)
\]

\end_inset

 with 
\series bold
\color blue
joint pdf 
\series default
\size scriptsize
\color inherit

\begin_inset Formula 
\begin{align*}
f(x,y) & =\frac{1}{2\pi\sigma_{x}\sigma_{y}\sqrt{1-\rho^{2}}}\\
 & \;\times\exp\Bigg(-\frac{1}{2(1-\rho^{2})}\bigg[\Big(\frac{x-\mu_{x}}{\sigma_{x}}\Big)^{2}+\Big(\frac{y-\mu_{y}}{\sigma_{y}}\Big)^{2}-2\rho\Big(\frac{x-\mu_{x}}{\sigma_{x}}\Big)\Big(\frac{y-\mu_{y}}{\sigma_{y}}\Big)\bigg]\Bigg)
\end{align*}

\end_inset


