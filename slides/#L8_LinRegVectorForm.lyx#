\begin_deeper
\begin_layout Itemize
Linear algebra: a 
\series bold
\color blue
vector
\series default
\color inherit
 is an object containing 
\series bold
\color blue
real numbers
\series default
\color inherit

\begin_inset Formula 
\[
\boldsymbol{a}=\left(\begin{array}{c}
1\\
3\\
5\\
3
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Common default: a vector is a 
\series bold
\color blue
column vector
\series default
\color inherit
.
\end_layout

\begin_layout Itemize
The 
\series bold
\color blue
transpose
\series default
\color inherit
 of a vector is a row vector
\begin_inset Formula 
\[
\boldsymbol{a}^{\top}=\left(\begin{array}{cccc}
1 & 3 & 5 & 3\end{array}\right)
\]

\end_inset


\end_layout

