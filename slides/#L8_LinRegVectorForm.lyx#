\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $\boldsymbol{A}$
\end_inset

 is an 
\begin_inset Formula $m\times n$
\end_inset

 matrix 
\begin_inset Formula $\boldsymbol{A}$
\end_inset

 
\end_layout

\begin_layout Itemize
\begin_inset Formula $\boldsymbol{b}$
\end_inset

 is an 
\begin_inset Formula $n$
\end_inset

-element vector
\end_layout

\begin_layout Itemize

\series bold
\color blue
Matrix-vector product
\series default
\color inherit
: dot product of each row in 
\begin_inset Formula $\boldsymbol{A}$
\end_inset

 with 
\begin_inset Formula $\boldsymbol{b}$
\end_inset


\begin_inset Formula 
\[
\underset{(m\times n)}{\boldsymbol{A}}=\left(\begin{array}{ccc}
- & \boldsymbol{a}_{1}^{\top} & -\\
- & \boldsymbol{a}_{2}^{\top} & -\\
 & \vdots\\
- & \boldsymbol{a}_{m}^{\top} & -
\end{array}\right)\qquad\underset{(n\times1)}{\boldsymbol{b}}=\left(\begin{array}{c}
b_{1}\\
\text{\vdots}\\
b_{n}
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\boldsymbol{A}\boldsymbol{b}=\left(\begin{array}{c}
\boldsymbol{a}_{1}^{\top}\boldsymbol{b}\\
\boldsymbol{a}_{2}^{\top}\boldsymbol{b}\\
\vdots\\
\boldsymbol{a}_{m}^{\top}\boldsymbol{b}
\end{array}\right)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
Matrix-Matrix multiplication
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Matrix product of 
\begin_inset Formula $\boldsymbol{A}$
\end_inset

 and 
\begin_inset Formula $\boldsymbol{B}$
\end_inset

: pairwise dot product of a row in 
\begin_inset Formula $\boldsymbol{A}$
\end_inset

 and a column in 
\begin_inset Formula $\boldsymbol{B}$
\end_inset


\begin_inset Formula 
\[
\underset{(m\times n)}{\boldsymbol{A}}=\left(\begin{array}{ccc}
- & \boldsymbol{a}_{1}^{\top} & -\\
- & \boldsymbol{a}_{2}^{\top} & -\\
 & \vdots\\
- & \boldsymbol{a}_{m}^{\top} & -
\end{array}\right)\qquad\underset{(n\times r)}{\boldsymbol{B}}=\left(\begin{array}{cccc}
\vert & \vert &  & \vert\\
\boldsymbol{b}_{1} & \boldsymbol{b}_{2} & \cdots & \boldsymbol{b}_{r}\\
\vert & \vert &  & \vert
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\boldsymbol{A}\boldsymbol{B}=\left(\begin{array}{cccc}
\boldsymbol{a}_{1}^{\top}\boldsymbol{b}_{1} & \boldsymbol{a}_{1}^{\top}\boldsymbol{b}_{2} & \cdots & \boldsymbol{a}_{1}^{\top}\boldsymbol{b}_{r}\\
\boldsymbol{a}_{2}^{\top}\boldsymbol{b}_{1} & \boldsymbol{a}_{2}^{\top}\boldsymbol{b}_{2} & \cdots & \boldsymbol{a}_{2}^{\top}\boldsymbol{b}_{r}\\
\vdots & \vdots & \ddots & \vdots\\
\boldsymbol{a}_{m}^{\top}\boldsymbol{b}_{1} & \boldsymbol{a}_{m}^{\top}\boldsymbol{b}_{2} & \cdots & \boldsymbol{a}_{m}^{\top}\boldsymbol{b}_{r}
\end{array}\right)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
Matrix-Matrix multiplication
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Example
\end_layout

\begin_layout Standard

\size small
\begin_inset Formula 
\[
\boldsymbol{A}=\left(\begin{array}{cc}
\textcolor{orange}{2} & \textcolor{orange}{3}\\
\textcolor{blue}{3} & \textcolor{blue}{2}
\end{array}\right),\quad\quad\boldsymbol{B}=\left(\begin{array}{cc}
\textcolor{orange}{1} & \textcolor{blue}{2}\\
\textcolor{orange}{0} & \textcolor{blue}{1}
\end{array}\right)
\]

\end_inset


\size scriptsize

\begin_inset Formula 
\begin{align*}
\boldsymbol{A\boldsymbol{B}} & =\left(\begin{array}{cc}
\textcolor{orange}{\left(\begin{array}{cc}
2 & 3\end{array}\right)\left(\begin{array}{c}
1\\
0
\end{array}\right)} & \left(\begin{array}{cc}
2 & 3\end{array}\right)\left(\begin{array}{c}
2\\
1
\end{array}\right)\\
\\
\left(\begin{array}{cc}
3 & 2\end{array}\right)\left(\begin{array}{c}
1\\
0
\end{array}\right) & \textcolor{blue}{\left(\begin{array}{cc}
3 & 2\end{array}\right)\left(\begin{array}{c}
2\\
1
\end{array}\right)}
\end{array}\right)\\
 & =\left(\begin{array}{cc}
\textcolor{orange}{2\cdot1+3\cdot0=2}\quad & 2\cdot2+3\cdot1=7\\
3\cdot1+2\cdot0=3\quad & \textcolor{blue}{3\cdot2+2\cdot1=8}
\end{array}\right)
\end{align*}

\end_inset


\end_layout

