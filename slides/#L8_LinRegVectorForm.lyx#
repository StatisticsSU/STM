\begin_deeper
\begin_layout Itemize

\series bold
\color blue
Linear regression in vector form
\color inherit

\begin_inset Formula 
\[
\boldsymbol{y}=\boldsymbol{X}\boldsymbol{\beta}+\boldsymbol{\varepsilon},\quad\quad\boldsymbol{\varepsilon}\sim N(\boldsymbol{0},\sigma^{2}\boldsymbol{I}_{n})
\]

\end_inset


\end_layout

\begin_layout Itemize

\series bold
\color blue
Least squares estimate 
\series default
\color inherit
of regression coefficients
\series bold

\begin_inset Formula 
\[
\boldsymbol{\hat{\beta}=(\boldsymbol{X}}^{\top}\boldsymbol{X})^{-1}\boldsymbol{X}^{\top}\boldsymbol{y}
\]

\end_inset


\end_layout

\begin_layout Itemize

\series bold
\color blue
Multivariate normal distribution 
\series default
\color inherit

\begin_inset Formula $\boldsymbol{x}\sim N(\boldsymbol{\mu},\boldsymbol{\Sigma})$
\end_inset

 with pdf
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f(\boldsymbol{x})=\vert2\pi\boldsymbol{\Sigma}\vert^{-1/2}\exp\left(-\frac{1}{2}(\boldsymbol{x}-\boldsymbol{\mu})^{\top}\boldsymbol{\Sigma}^{-1}(\boldsymbol{x}-\boldsymbol{\mu})\right)
\]

\end_inset


\end_layout

