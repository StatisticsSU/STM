\begin_deeper
\begin_layout Itemize
Let 
\begin_inset Formula $X$
\end_inset

 and 
\begin_inset Formula $Y$
\end_inset

 follow a bivariate normal distribution 
\begin_inset Formula 
\[
(X,Y)\sim N(\mu_{x},\mu_{y},\sigma_{x},\sigma_{y},\rho)
\]

\end_inset


\end_layout

\begin_layout Itemize
The marginal density for 
\begin_inset Formula $X$
\end_inset

 is then also normal
\begin_inset Formula 
\[
X\sim N(\mu_{x},\sigma_{x}^{2})
\]

\end_inset

with the same parameters as those in the bivariate normal.
\end_layout

\begin_layout Itemize
The marginal density for 
\begin_inset Formula $Y$
\end_inset

 is then also normal
\begin_inset Formula 
\[
Y\sim N(\mu_{y},\sigma_{y}^{2})
\]

\end_inset


\end_layout

\begin_layout Itemize
Also the conditional densities 
\begin_inset Formula $f_{Y\vert X}(y)$
\end_inset

 and 
\begin_inset Formula $f_{X\vert Y}(x)$
\end_inset

 are normal, see 
\begin_inset CommandInset href
LatexCommand href
name "wikipedia"
target "https://en.wikipedia.org/wiki/Multivariate_normal_distribution#Bivariate_case_2"
literal "false"

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
Multivariate normal distribution
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $\boldsymbol{x}=(X_{1},X_{2},\ldots,X_{p})^{\top}$
\end_inset

 and follows a 
\series bold
\color blue
multivariate normal distribution
\series default
\color inherit
 
\begin_inset Formula 
\[
\boldsymbol{x}\sim N(\boldsymbol{\mu},\boldsymbol{\Sigma})
\]

\end_inset

with 
\series bold
\color blue
joint pdf
\series default
\color inherit

\begin_inset Formula 
\[
f(\boldsymbol{x})=\frac{1}{(2\pi)^{p/2}}\vert\boldsymbol{\Sigma}\vert^{-1/2}\exp\left(-\frac{1}{2}(\boldsymbol{x}-\boldsymbol{\mu})^{\top}\boldsymbol{\Sigma}^{-1}(\boldsymbol{x}-\boldsymbol{\mu})\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Clash in notation: 
\emph on
small
\emph default
 bold letters for random vectors.
\end_layout

\begin_layout Itemize
Parameters when 
\begin_inset Formula $p=2$
\end_inset

:
\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize

\series bold
\color blue
Mean vector 
\series default
\color inherit

\begin_inset Formula 
\[
\boldsymbol{\mu}=\left(\begin{array}{c}
\mu_{1}\\
\mu_{2}
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize

\series bold
\color blue
Covariance matrix
\series default
\color inherit

\begin_inset Formula 
\[
\boldsymbol{\Sigma}=\left(\begin{array}{cc}
\sigma_{1}^{2} & \rho\sigma_{1}\sigma_{2}\\
\rho\sigma_{1}\sigma_{2} & \sigma_{2}^{2}
\end{array}\right)
\]

\end_inset


\end_layout

\end_deeper
\end_deeper
