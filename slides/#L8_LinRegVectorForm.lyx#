\begin_layout Plain Layout

\series bold
\color orange
Least squares estimate
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Least squares minimizes the sum of squared residuals
\begin_inset Formula 
\[
Q(\beta_{0},\beta_{1})=\sum_{i=1}^{n}(y_{i}-\hat{y}_{i})^{2}=\sum_{i=1}^{n}(y_{i}-\beta_{0}-\beta_{1}x_{i})^{2}
\]

\end_inset


\end_layout

\begin_layout Itemize
Find minimum of 
\begin_inset Formula $Q(\beta_{0},\beta_{1})$
\end_inset

 by solving system of equations
\size footnotesize

\begin_inset Formula 
\begin{align*}
\frac{\partial Q(\beta_{0},\beta_{1})}{\partial\beta_{0}} & =\sum_{i=1}^{n}2(y_{i}-\beta_{0}-\beta_{1}x_{i})(-1)=0\\
\frac{\partial Q(\beta_{0},\beta_{1})}{\partial\beta_{1}} & =\sum_{i=1}^{n}2(y_{i}-\beta_{0}-\beta_{1}x_{i})(-x_{i})=0
\end{align*}

\end_inset

gives the so called normal equations
\end_layout

\begin_layout Standard

\size footnotesize
\begin_inset Formula 
\begin{align*}
n\bar{y} & =n\beta_{0}+\beta_{1}n\bar{x}\\
\sum_{i=1}^{n}x_{i}y_{i} & =\beta_{0}n\bar{x}+\beta_{1}\sum_{i=1}^{n}x_{i}^{2}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
With solution
\size footnotesize

\begin_inset Formula 
\[
\hat{\beta}_{1}=\frac{\sum_{i=1}^{n}(x_{i}-\bar{x})(y_{i}-\bar{y})}{\sum_{i=1}^{n}(x_{i}-\bar{x})^{2}}\qquad\hat{\beta}_{0}=\bar{y}-\hat{\beta}_{1}\bar{x}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout

\series bold
\color orange
Least squares estimate - vector form
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Sum of squared residuals in vector notation
\begin_inset Formula 
\[
Q(\boldsymbol{\beta})=\sum_{i=1}^{n}(y_{i}-x_{i}^{\top}\boldsymbol{\beta})^{2}=(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})^{\top}(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})
\]

\end_inset


\end_layout

\begin_layout Itemize
Set 
\series bold
\color blue
gradient
\series default
\color inherit
 vector equal to zero
\begin_inset Formula 
\[
\frac{\boldsymbol{\partial}}{\boldsymbol{\partial}\boldsymbol{\beta}}Q(\boldsymbol{\beta})=-2\boldsymbol{X}^{\top}(\boldsymbol{y}-\boldsymbol{X}\boldsymbol{\beta})=\boldsymbol{0}
\]

\end_inset

gives the normal equations
\begin_inset Formula 
\[
\boldsymbol{X}^{\top}\boldsymbol{X}\boldsymbol{\beta}=\boldsymbol{X}^{\top}\boldsymbol{y}
\]

\end_inset


\end_layout

\begin_layout Itemize
Multiply both sides with the matrix inverse of 
\begin_inset Formula $\boldsymbol{X}^{\top}\boldsymbol{X}$
\end_inset


\begin_inset Formula 
\[
\left(\boldsymbol{X}^{\top}\boldsymbol{X}\right)^{-1}\boldsymbol{X}^{\top}\boldsymbol{X}\boldsymbol{\beta}=\left(\boldsymbol{X}^{\top}\boldsymbol{X}\right)^{-1}\boldsymbol{X}^{\top}\boldsymbol{y}
\]

\end_inset

gives the least squares solution
\begin_inset Formula 
\[
\hat{\boldsymbol{\beta}}=(\boldsymbol{\boldsymbol{X}}^{\top}\boldsymbol{X})^{-1}\boldsymbol{X}^{\top}\boldsymbol{y}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

